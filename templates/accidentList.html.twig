{% extends 'base.html.twig' %}
{% block body %}
    <div id="form">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>
    <h3>Lista Zdarze≈Ñ</h3>
    <table>
        <tr>
            <th>Id</th>
            <th>Powiat</th>
            <th>Adres</th>
            <th>Data zdarzenia</th>
        </tr>
        {% for accident in accidents %}
            <tr>
                <td>{{ accident.id }}</td>
                <td>{{ accident.county }}</td>
                <td style="text-align: left">{{ accident.locality }} {{ accident.street }}</td>
                <td>{{ accident.time|date("Y-m-d H:i") }}</td>
            </tr>
        {% else %}
            <tr>
                <td>Empty table.</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}