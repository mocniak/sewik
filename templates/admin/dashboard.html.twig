{% extends 'base.html.twig' %}

{% block body %}
    <h2>Szablony zapytań | <a href="{{ path('create_template') }}">[dodaj nowy]</a></h2>
    <ul>
        {% for template in templates %}
            <li>
                <a href="{{ path('report_page',{'id': template.id}) }}">{{ template.name }}</a> |
                <a href="{{ path('edit_template', {'id': template.id}) }}">[edytuj]</a> | {{ template.id }}
            </li>
        {% else %}
            <li>Brak zapytań.</li>
        {% endfor %}
    </ul>
{% endblock %}