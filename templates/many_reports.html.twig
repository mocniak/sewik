{% extends 'base.html.twig' %}


{% block body %}
    <h2 style="text-align: center">Test</h2>
    {% for report in reports %}
        <h3 style="text-align: center">{{ report.title }}</h3>
        <table>
            <tr>
                {% for header in report.tableHeaders %}
                    <th>{{ header }}</th>
                {% endfor %}
            </tr>
            {% for row in report.table %}
                <tr>
                    {% for cell in row %}
                        <td>{{ cell }}</td>
                    {% endfor %}
                </tr>
            {% else %}
                <tr>
                    <td>Brak wynik√≥w</td>
                </tr>
            {% endfor %}
        </table>
        <p>Czas generowania raportu: {{ (report.timeCost * 1000) | round }} milisekund.</p>
    {% else %}
        No reports.
    {% endfor %}
{% endblock %}
